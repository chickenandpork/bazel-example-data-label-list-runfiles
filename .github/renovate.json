{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "enabled": true,
      "matchManagers": [
        "bazel",
        "bazel-module"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor"
      ]
    }
  ]
}
